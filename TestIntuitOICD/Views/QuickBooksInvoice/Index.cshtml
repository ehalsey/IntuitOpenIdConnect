@model  TestIntuitOICD.Models.QuickBooksViewModels.InvoiceViewModel
@{
    ViewData["Title"] = "Create Invoice";
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerRef"></label>
                <input asp-for="CustomerRef" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="ItemRef"></label>
                <input asp-for="ItemRef" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="ItemRef"></label>
                <input asp-for="ItemRef" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Amount"></label>
                <input asp-for="Amount" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="ItemName"></label>
                <input asp-for="ItemName" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
